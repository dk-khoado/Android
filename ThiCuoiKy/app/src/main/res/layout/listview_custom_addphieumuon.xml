<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/custom_lv_add_tenSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sách"
            android:textColor="@color/colortextBlack"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/custom_lv_add_maSach"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="Mã Sách"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.50"
                android:layout_height="wrap_content"
                android:text="Số Lượng:"/>
            <TextView
                android:id="@+id/custom_lv_add_soLuong"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colortextBlack"
                android:text="00000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/custom_lv_add_TG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác Giả"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/custom_lv_add_btnAdd"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/list_add"/>
</LinearLayout>
