                <!--android:id="@+id/custom_btnDetail"-->
                <!--android:text="@string/detail"-->
                <!--android:background="@drawable/ic_edit_black_24dp"/>-->
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
